<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0">

    <!-- Header for Incident List Activity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_black"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"/>
        <!-- You need to add ic_arrow_back_black to your res/drawable -->
        <!-- Example Vector Asset: ic_arrow_back.xml with color black -->

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Danh sách sự cố Cấp nước"/>

    </LinearLayout>

    <!-- RecyclerView to display the full list of incidents for the category -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/incidentListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_incident_report"
        android:background="#F0F0F0"/>

</LinearLayout>
