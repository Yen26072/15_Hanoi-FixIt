<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image of the incident -->
        <ImageView
            android:id="@+id/imgIncident"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_incident_image"
            android:contentDescription="Incident Image"
            android:layout_marginEnd="12dp"/>
        <!-- Placeholder image (create placeholder_incident_image.xml or use a real image) -->

        <!-- Details of the incident (type, location, time, status) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIncidentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="Loại sự cố: Cấp nước"/>

            <TextView
                android:id="@+id/tvIncidentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp"
                tools:text="Địa điểm: 123 Tây Sơn, Trung Liệt, Đống Đa"/>

            <TextView
                android:id="@+id/tvIncidentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp"
                tools:text="Thời gian: 31/05/2025"/>

            <TextView
                android:id="@+id/tvIncidentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#FF0000"
                tools:text="Trạng thái: Chưa xử lý"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
